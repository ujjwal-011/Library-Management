    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <!--Load the AJAX API-->

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check</title>
</head>
<body>

    <div class="Divv">

    <h1 class="heading">
        Check Avaialability
    </h1>

    <!-- ................. -->

    
    <form class="Form-add" action="/check" method="post">
        <div class="form-group row">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Name of Book</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="inputEmail3" placeholder="e.g. The Alchemist" name="book">
          </div>
        </div>


        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Author</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="inputEmail3" placeholder="e.g. Paulo Coelho" name="author">

            </div>
          </div>


        <div class="form-group row">
          <div class="col-sm-10 btn1">
            <button type="submit" class="btn btn-primary">CHECK</button>
          </div>
        </div>
  

      </form>


      <div class="result">
        <table class="table table-hover">
          <thead>
          </thead>
          <tbody>
            <tr class="table-warning">
              <td>Name of Book:</td>
              <td class="message1"><%=book%></td>
            </tr>
            <tr class="table-danger">
              <td>Name of Author:</td>
              <td><%=author%></td>
            </tr>
            <tr class="table-warning">
              <td>Number of copies currently available:</td>
              <td><%=copy%></td>
            </tr>
            <tr class="table-danger">
              <td>Total No. of Borrows Uptil Now</td>
              <td><%=total%></td>
            </tr>
          </tbody>
        </table>
        <div class="result1">
        <h2>Details of Borrowers Currently</h2>
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Member ID</th>
              <th>Borrow Date</th>
            </tr>
          </thead>
          <tbody>
        <%for(let i=0;i<borrower_name.length;i++){%>
          <%if(i%2==0){%>
          <tr class="table-success">
            <th scope="row"><%=arr[i]%></th>
            <td class="message2"><%=borrower_name[i]%></td>
            <td><%=borrower_id[i]%></td>
            <td><%=borrower_date[i]%></td>
          </tr>
          <%}%>
          <%if(i%2==1){%>
            <tr>
              <th scope="row"><%=arr[i]%></th>
              <td><%=borrower_name[i]%></td>
              <td><%=borrower_id[i]%></td>
              <td><%=borrower_date[i]%></td>
            </tr>
          <%}%>
        <%}%>
        </tbody>
        </table>
    </div>
    </div>

    <script src="check.js"></script>

</body>
</html>