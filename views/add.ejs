              <input type="text" class="form-control" id="inputEmail3" name="author" placeholder="e.g. Paulo Coelho">

            </div>
          </div>

          <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">No. of Copies</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="inputEmail3" name="copy" placeholder="e.g. 2">
            </div>
          </div>


        <div class="form-group row">
          <div class="col-sm-10 btn1">
            <button type="submit" class="btn btn-primary btn1">ADD</button>
          </div>
        </div>
  

